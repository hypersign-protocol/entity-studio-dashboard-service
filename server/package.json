{
  "name": "studio-server",
  "version": "1.0.4",
  "description": "Server for hypersign studio web portal",
  "main": "dist/index",
  "typings": "dist/index",
  "scripts": {
    "setup": "npm run build && npm run newdb && npm run bootstrap",
    "newdb": "npm run start -- --newdb",
    "setup-noenv": "npm run build && npm run start -- --newdb && npm run setUI",
    "setEnv": "cp .env.staging .env",
    "setUI": "mkdir -p public && mkdir -p dist/public && cp -R ../client/dist/* public && cp -R public/* dist/public",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "rimraf ./dist && tsc -p . && mkdir ./dist/temp",
    "bootstrap": "npm run start -- --bootstrap",
    "test": "mocha -r ts-node/register src/tests/**/*.test.ts",
    "prettier": "prettier --config .prettierrc.json --write src/**/*.ts",
    "lint": "eslint . --ext .ts",
    "lint-fix": "npm run lint -- --fix",
    "prepare": "cd ../ && husky install ./server/.husky"
  },
  "author": "Vishwas Anand Bhushan",
  "license": "MIT",
  "dependencies": {
    "aes-js": "^3.1.2",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.14.2",
    "hid-hd-wallet": "git+https://github.com/hypersign-protocol/hid-hd-wallet.git#ssi-integration",
    "hs-ssi-sdk": "github:hypersign-protocol/hs-ssi-sdk#develop",
    "hypersign-auth-node-sdk": "^6.4.4",
    "jsonwebtoken": "^8.5.1",
    "lds-sdk": "^4.0.1",
    "mongoose": "^6.5.2",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.4.11",
    "sha.js": "^2.4.11",
    "simple-node-logger": "^18.12.24",
    "sqlite3": "^5.0.0",
    "uuid": "^8.2.0",
    "uuidv4": "^6.2.13",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.24.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.7.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
